{
  "version": 10,
  "configurePresets": [
    {
      "name": "x64-windows",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "generator": "Ninja",
      "environment": {
        "VCPKG_ROOT": "C:/vcpkg",
        "VCPKG_FORCE_DOWNLOADED_BINARIES": "1"
      },
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_C_COMPILER_LAUNCHER": "sccache",
        "CMAKE_CXX_COMPILER_LAUNCHER": "sccache",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_STANDARD": "26",
        "CMAKE_C_STANDARD": "23",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true,
        "VCPKG_INSTALLED_DIR": "${sourceDir}/out/vcpkg_installed",
        "X_VCPKG_APPLOCAL_DEPS_INSTALL": "1"
      },
      "toolset": {
        "strategy": "external",
        "value": "v143,host=x64,version=14.50"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [{ "name": "x64-windows", "configurePreset": "x64-windows" }],
  "testPresets": [{ "name": "x64-windows", "configurePreset": "x64-windows" }],
  "packagePresets": [{ "name": "x64-windows", "configurePreset": "x64-windows" }]
}
